{% extends 'base.html.twig' %}

{% block title %}Feed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Add your CSS here */
        .feed-container {
            display: flex;
            flex-direction: column;
            margin-top: 16px;
            border-radius: 34px 34px 0px 0px;
            background-color: var(--bg);
            border-top: 1px solid var(--border);
            border-right: 1px solid var(--border);
            border-left: 1px solid var(--border);
            width: 616px;
            min-height: 100vh;
            overflow: hidden;
        }

        .feed-header {
            display: flex;
            width: 100%;
            padding: 24px;
        }

        .feed-header-text {
            font-size: var(--font-h1);
            color: var(--white);
        }

        .separator {
            width: 100%;
            height: 1px;
            background-color: var(--border);
        }

        .post {
            display: flex;
            padding: 10px;
            gap: 10px;
            border-bottom: 1px solid var(--border);
            color: var(--white);
            width: 100%;
        }

        .post .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 100000px;
            aspect-ratio: 1/1;
            object-fit: cover;
        }

        .post .post-content {
            display: flex;
            flex-direction: column;
            gap: 24px;
            width: 100%;
            overflow: visible;
        }

        .post-content-header {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .post-content-header-left {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .post-content-body {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .post-content-body-images {
            display: flex;
            flex-direction: row;
            gap: 8px;
            width: 100%;
            overflow-x: auto;
        }

        .post-content-body-images img {
            aspect-ratio: 2/3;
            height: 324px;
            border-radius: 8px;
            object-fit: cover;
        }

        .post-content-body-interaction {
            display: flex;
            flex-direction: row;
            gap: 16px;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="navbar">
        {# {{ include('partials/navbar.html.twig') }} #}
    </div>

    <div class="feed-container">
        <div class="feed-header">
            <span class="feed-header-text">Your Feed</span>
        </div>
        <div class="separator"></div>
        {% for post in posts %}
            <div class="post">
                <img src="https://i.pinimg.com/736x/66/41/de/6641deb8863aceb2d6ac885d84ba1249.jpg" alt="Profile Picture" class="profile-pic">
                <div class="post-content">
                    <div class="post-content-header">
                        <div class="post-content-left">
                            <p>__blueOrchide</p>
                            <p>Lorem 200000</p>
                        </div>
                        {{ include('components/Button.html.twig', { label: 'Follow', size: "small",class: 'button-secondary' }) }}
                    </div>
                    <div class="post-content-body">
                        <div class="post-content-body-images">
                            <img src="https://i.pinimg.com/736x/66/41/de/6641deb8863aceb2d6ac885d84ba1249.jpg" alt="Placeholder Image 1">
                            <img src="https://i.pinimg.com/736x/66/41/de/6641deb8863aceb2d6ac885d84ba1249.jpg" alt="Placeholder Image 2">
                            <img src="https://i.pinimg.com/736x/66/41/de/6641deb8863aceb2d6ac885d84ba1249.jpg" alt="Placeholder Image 3">
                        </div>
                        <div class="post-content-body-interaction">
                            <div class="post-content-body-interaction">
                                {{ include('components/QuickActions.html.twig', { iconName: 'icon-heart', text: '10k' }) }}
                                {{ include('components/QuickActions.html.twig', { iconName: 'icon-comment', text: '10' }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
