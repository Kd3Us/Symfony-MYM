{% extends 'base.html.twig' %}

{% block title %}Feed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    .register-container {
        display: flex;
        flex-direction: column;
        width: 276px;
        gap: 40px;
        align-items: center;
        color: var(--text-light);
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 40px;
        width: 100%;
    }

    .inputs {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 100%;
    }

    .password {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .footer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 13px;
        width: 100%;
    }

        
    </style>
{% endblock %}

{% block body %}
    <div class="register-container">
        <h1>Log In</h1>
        <form>
            <div class="inputs">
                    {{ include('components/Input.html.twig', { id: 'email', label: 'Email', type: "email", name: 'email', placeholder: 'your@email.com' }) }}
                <div class="password">
                    {{ include('components/Input.html.twig', { id: 'password', label: 'Password',type: "password", name: 'password', placeholder: 'Forgot password ?' }) }}
                    {{ include('components/Link.html.twig', { href: 'https://www.youtube.com/watch?v=dQw4w9WgXcQ', text: "Forgot password ?" }) }}
                </div>
            </div>
            {{ include('components/Button.html.twig', { content: 'Log In' }) }}
        </form>
        <div class="footer">
            <p>Don't have an account?</p>
            {{ include('components/Link.html.twig', { href: 'register', variant: "blue", text: 'Register Here' }) }}
        </div>
    </div>
{% endblock %}
