<div class="input-component">
    <label for="{{ id }}">{{ label }}</label>
    <input 
        type="{{ type|default('text') }}"
        id="{{ id }}"
        name="{{ name }}"
        value="{{ value|default('') }}"
        placeholder="{{ placeholder|default('') }}"
        {% if required|default(false) %}required{% endif %}
        {% if disabled|default(false) %}disabled{% endif %}
        class="{{ class|default('') }}"
    />
</div>